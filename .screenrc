# Now, let's override with our customizations
startup_message off
vbell off
msgwait 1

# Define status commands
backtick 99  86400 86400 $HOME/.byobu/byobu-status logo
backtick 100 3600 3600 $HOME/.byobu/byobu-status release
backtick 101 10 10 $HOME/.byobu/byobu-status updates-available
backtick 102 2 2 $HOME/.byobu/byobu-status reboot-required
backtick 103 2 2 $HOME/.byobu/byobu-status cpu-freq
backtick 104 86400 86400 $HOME/.byobu/byobu-status cpu-count
backtick 105 86400 86400 $HOME/.byobu/byobu-status mem-available
backtick 106 2 2 $HOME/.byobu/byobu-status load-average
backtick 107 2 2 $HOME/.byobu/byobu-status mem-used
backtick 108 600 600 $HOME/.byobu/byobu-status ec2-cost
backtick 109 3600 3600 $HOME/.byobu/byobu-status hostname
backtick 110 86400 86400 $HOME/.byobu/byobu-status whoami
backtick 111 86400 86400 $HOME/.byobu/byobu-status menu
backtick 112 86400 86400 $HOME/.byobu/byobu-status arch
backtick 113 30 30 $HOME/.byobu/byobu-status battery
backtick 114 10 10 $HOME/.byobu/byobu-status users
backtick 115 60 60 $HOME/.byobu/byobu-status uptime
backtick 116 2 2 $HOME/.byobu/byobu-status processes
backtick 117 2 2 $HOME/.byobu/byobu-status network-up
backtick 118 2 2 $HOME/.byobu/byobu-status network-down
backtick 119 2 2 $HOME/.byobu/byobu-status wifi-quality
backtick 120 86400 86400 $HOME/.byobu/byobu-status date
backtick 121 86400 86400 $HOME/.byobu/byobu-status time
backtick 122 3600 3600 $HOME/.byobu/byobu-status ip-address
backtick 123 86400 86400 $HOME/.byobu/byobu-status disk-available
backtick 124 2 2 $HOME/.byobu/byobu-status disk-used
backtick 125 30 30 $HOME/.byobu/byobu-status temp-c
backtick 126 30 30 $HOME/.byobu/byobu-status temp-f

hardstatus alwayslastline

# Turns off alternate screen switching in xterms,
# so that text in screen will go into the xterm's scrollback buffer:
termcapinfo xterm* ti@:te@
altscreen on

# Log 10000 lines
defscrollback 10000


